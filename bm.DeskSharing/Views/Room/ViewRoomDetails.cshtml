@model bm.DeskSharing.Models.Room

<head>
    <title>EJ2 Diagram</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Typescript UI Controls">
    <meta name="author" content="Syncfusion">
    
    <script src="~/js/SyncJs/ej2.min.js"></script>

</head>
@{
    //var room = ViewBag.Message;
}
<h1>Create Room and Place Desks here</h1>

<div class="col-5">
    <!-- Building ID Dropdown -->
    <div class="form-outline col">
        <label class="form-label">Building ID :</label>
        <input type="text" id="cmbBID" class="form-control" disabled="disabled" value="@Model.RID">
    </div>

    <!-- Floor ID Dropdown -->
    <div class="form-outline col">
        <label class="form-label">Floor ID :</label>
        <input type="text" id="cmbFID" class="form-control" disabled="disabled" value="@Model.fkFID">
    </div>

    <!-- Room Code-->
    <div class="form-outline col">
        <label class="form-label">Room Code :</label>
        <input type="text" id="txtRCode" class="form-control"  disabled="disabled" value="@Model.RCode"/>
    </div>

    <!-- Room Name-->
    <div class="form-outline col">
        <label class="form-label">Room Name :</label>
        <input type="text" id="txtRName" class="form-control" disabled="disabled" value="@Model.RName"/>
    </div>

    <!-- Room Description-->
    <div class="form-outline col">
        <label class="form-label">Room Description :</label>
        <input type="text" id="txtRDesc" class="form-control" disabled="disabled" value="@Model.RDesc"/>
    </div>

    <textarea id="jsontxt" cols="50" rows="6" placeholder="Json Code for the Diagram">@Model.DiagramJson</textarea>

    <br /><button asp-controller="Room" asp-action="SaveRoom" onclick="saveDia()" class="btn btn-primary">Save</button>
   <button onclick="loadDia()">Load</button>
</div>



<div id="symbolpalette">
</div>

<div id="container">
    <div id="element"></div>
</div>

<div class="modal fade" id="modelWindow" role="dialog">
            <div class="modal-dialog modal-xl vertical-align-center">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h6 class="modal-title">Enter new Desk Details</h6>
                </div>
                <div class="modal-body">
                <input type="text" class="form-control" id="txtdeskID" placeholder="Desk ID" /><br />
                <input type="date" class="form-control" id="dtFrom" placeholder="From Date" /><br />
                <input type="date" class="form-control" id="dtTo" placeholder="From Date" /><br />
                    <button id="btnSave" class="btn btn-outline-primary">Reserve Desk</button>
                </div>
                <div class="modal-footer">
                    <button id="btnCloseModal" type="button" data-dismiss="modal" class="btn btn-warning">Close</button>
                </div>
              </div>
            </div>
        </div>

<script src="~/bm-template/myown/js/js_RoomController_details.js"></script>